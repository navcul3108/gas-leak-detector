{
    "openapi": "3.0.2",
    "info": {
        "title": "API Title",
        "version": "1.0"
    },
    "servers": [
        {
            "url": "https://mysterious-reaches-12750.herokuapp.com/api",
            "description": "API server"
        }
    ],
    "paths": {
        "/users/login": {
            "post": {
                "summary": "Request Bearer Token to login",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "headers": {
                            "Set-Cookie": {
                                "description": "Set jwt token in cookie"
                            }
                        },
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "description": "Status of response"
                                        },
                                        "token": {
                                            "description": "Bearer Token"
                                        },
                                        "data": {
                                            "description": "Json object contains name and email of user"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/signup": {
            "post": {
                "summary": "Signup an account",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "format": "string",
                                        "description": "User's full name"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password"
                                    },
                                    "passwordConfirm": {
                                        "type": "string",
                                        "format": "password",
                                        "description": "Must be the same with password"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "New account has been created in the system",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "description": "Status of response"
                                        },
                                        "token": {
                                            "description": "Bearer Token"
                                        },
                                        "data": {
                                            "description": "Json object contains name and email of user",
                                            "type": "object",
                                            "example": {
                                                "name": "name",
                                                "email": "abc@gmail.com"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
