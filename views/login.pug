extend layout 

block variables 
  -var title="Đăng nhập"

block content
  link(rel="stylesheet" href="assets/css/style.css")
  #preloader
    .jumper
      div
      div
      div
  // ***** Preloader End *****
  .d-flex.justify-content-center.mt-3
    form#login-form.w-50
      h3.heading Đăng nhập vào hệ thống
      .d-flex.justify-content-center
        h4#text-error.text-danger
